<Window x:Class="EasyBot.Views.AddActionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyBot.Views"
        mc:Ignorable="d"
        Title="Add Action" Height="100" Width="400" Background="#151515" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary Source="../ResourceDictionaries/DarkAppereance.xaml"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Content="MouseAction" Style="{StaticResource DarkButton}" Name="Button_AddMouseAction" Click="Button_AddMouseAction_Click"/>
        <Button Grid.Column="1" Content="KeyBoardAction" Style="{StaticResource DarkButton}" Name="Button_AddKeyBoardAction" Click="Button_AddKeyBoardAction_Click"/>

    </Grid>
</Window>